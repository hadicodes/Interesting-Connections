  <div class="container">
    <div class="jumbotron">
      <p>New Thread Form</p>
      {{#each post}}
      <form>
        {{!-- req.body.topic name defines the property --}}
        <p>Title:</p>
        <input class='thread-title' type="text" name="thread_title">
        <p>Topic:</p>
        <input class='topic' type="text" name="topic" value="{{topic}}" style="color:black" readonly>
        <p>Author: </p>
        <input class='author' type="text" name="author">
        <p>Message: </p>
        <textarea class='thread-message' name="thread_message"></textarea>
        <button class="submit-button" type="submit">Submit</button>
      </form>
      {{/each}}
    </div>
    <div class="col-xs-6 col-md-offset-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Current Threads</h3>
        </div>
        <div class="panel-body">
        <ul class="messages_list">
          {{#each post}}
      <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title .hoverable"><font color="#0F0F16"><a href="/forum/{{topic}}/{{thread_title}}">{{thread_title}}</a></h3></font>
    </div>
          </div>
          {{/each}}
               </div>
      </div>
    </div>
  </div>
    <script type="text/javascript" src="/assets/js/threads.js"></script>
